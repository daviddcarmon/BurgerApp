<h1>Burgers!</h1>

<h2>Burgers that are not sleepy!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        <p>
            #{{this.id}} {{burger}}
        <button>Devour?</button>
        </p>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
    {{!-- {{#each burgers}}
    {{#if devoured}}
    {{> Burgers/Burger-block devoured=false}}
    {{/if}}
    {{/each}} --}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="devoured">devoured?</label><br>
        <input type="radio" name="devoured" value="1" checked> devoured!<br>
        <input type="radio" name="devoured" value="0"> not </div>

    <button type="submit">Add Burger</button>
</form>